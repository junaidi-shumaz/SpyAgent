<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/missionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="TextView"

        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/missionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="TextView"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/custom_action_view_level"
        android:layout_alignLeft="@+id/custom_action_view_level"
        android:layout_alignStart="@+id/custom_action_view_level" />

    <TextView
        android:id="@+id/missionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="15dp"
        android:layout_below="@+id/smsTxt"
        android:layout_alignLeft="@+id/smsTxt"
        android:layout_alignStart="@+id/smsTxt" />


</RelativeLayout>