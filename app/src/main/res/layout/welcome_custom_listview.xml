<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/custom_action_image"
        android:layout_width="80dp"
        android:layout_height="50dp"

        android:layout_marginTop="22dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:id="@+id/custom_action_view_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/custom_action_image"
        android:layout_toRightOf="@+id/custom_action_image"
        android:layout_toEndOf="@+id/custom_action_image"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

        

</RelativeLayout>